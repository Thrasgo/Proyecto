<div class="container" style="margin: 50px auto;">
    <div class="col-6 offset-3">
        <h4>Modificar la novedad</h4>
        <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value = "{{novedad.id}}" name = "id">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Titulo" value = "{{novedad.titulo}}"name="titulo">
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo">{{novedad.cuerpo}} </textarea>

            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="fecha de actualizaciÃ³n" name="fecha">{{novedad.fecha}}</textarea>

            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="URL"name="dir">{{novedad.dir}}</textarea>

            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="num" name="num">{{novedad.num}}</textarea>

            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>